
@{
    ViewData["Title"] = "Edit";
}
@model Movie
@{
    var categories = (List<Category>)ViewBag.Categories;
}
<h1>Edit</h1>
<div class="container text-left">

    <form method="post" action="Edit">
        <div class="row">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
            <div class="form-group col-6">
                <label for="exampleFormControlInput1">Name</label>
                <input class="form-control" name="Name" value="@Model.Name" />
            </div>
            <div class="form-group col-6">
                <label for="exampleFormControlInput1">Year</label>
                <input class="form-control" name="Year" value="@Model.Year" />
            </div>
            <div class="form-group col-6">
                <label for="exampleFormControlInput1">Director</label>
                <input class="form-control" name="Director" value="@Model.Director" />
            </div>
            <div class="form-group col-6">
                <label for="exampleFormControlInput1">Ownner</label>
                <input class="form-control" name="Ownner" value="@Model.Ownner" />
            </div>
            <div class="form-group col-6">
                <label for="exampleFormControlSelect1">Category</label>
                <select name="CategoryId" class="form-control" id="exampleFormControlSelect1">
                    @foreach (var cat in categories)
                    {
                        <option selected="@cat.Id == @Model.CategoryId" value="@cat.Id">@cat.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>
    </form>
</div>
